@page "/OrderDetails/Edit"
@model Q2.Pages.OrderDetails.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Chỉnh sửa chi tiết đơn hàng</h2>
<style>
    form {
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: bold;
        color: #555;
        margin-bottom: 8px;
        display: inline-block;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-sizing: border-box;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
        }

    .btn-primary {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        font-weight: bold;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        transition: background-color 0.3s;
        cursor: pointer;
        margin-top: 20px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    a {
        display: inline-block;
        margin-top: 15px;
        text-align: center;
        width: 100%;
        color: #007bff;
        text-decoration: none;
        transition: color 0.3s;
    }

        a:hover {
            color: #0056b3;
        }
</style>

<form method="post" enctype="multipart/form-data" asp-page-handler="EditOrderDetail">
    @Html.AntiForgeryToken()

    <input type="hidden" class="form-control" id="OrderId" name="OrderId" value="@Model.OrderDetail.OrderId" />
    <input type="hidden" class="form-control" id="ProductId" name="ProductId" value="@Model.OrderDetail.ProductId" />

    <div class="form-group">
        <label for="UnitPrice">Đơn giá</label>
        <input type="number" step="0.01" class="form-control" id="UnitPrice" name="UnitPrice" value="@Model.OrderDetail.UnitPrice" required />
    </div>

    <div class="form-group">
        <label for="Quantity">Số lượng</label>
        <input type="number" class="form-control" id="Quantity" name="Quantity" value="@Model.OrderDetail.Quantity" required />
    </div>

    <div class="form-group">
        <label for="Discount">Giảm giá (%)</label>
        <input type="number" step="" class="form-control" id="Discount" name="Discount" value="@Model.OrderDetail.Discount ?? 0" />
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
</form>

<a href="/OrderDetail/List">Trở lại danh sách chi tiết đơn hàng</a>
